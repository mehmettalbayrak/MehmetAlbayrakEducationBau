@model List<MiniShopApp.Entity.Concrete.Category>
<h1>Kategoriler</h1>
<main>
    <div class="container-fluid px-4">
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Tables</li>
        </ol>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                DataTable Example
            </div>
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Ad</th>
                            <th>Açıklama</th>
                            <th>Oluşturma Tarihi</th>
                            <th>Son Değiştirilme Tarihi</th>
                            <th>Aktif mi?</th>
                            <th>Silinmiş mi?</th>
                            <th>İşlemler</th>

                        </tr>
                    </thead> 
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>@category.Id</td>
                                <td>@category.Name</td>
                                <td>@category.Description</td>
                                <td>@category.CreatedDate.ToShortDateString()</td>
                                <td>@category.ModifiedDate.ToShortDateString()</td>
                                <td>@category.IsActive</td>
                                <td>@category.IsDeleted</td>
                                <td>
                                    <div style="display: flex; align-items: center; flex-direction: row; justify-content: space-between;">
                                    <button class="btn btn-danger btn-sm">Sil</button>
                                    <button class="btn btn-warning btn-sm">Yok Et</button>
                                    <button class="btn btn-info btn-sm">Düzenle</button>
                                    </div>
                                </td>
                            </tr>
                        }
                        
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>