@model List<AuthorViewModel>
<div class="list-group">
    <a class="list-group-item list-group-item"
       asp-area=""
       asp-controller="BooksShop"
       asp-action="BookList"
       asp-route-authorurl="">
        Tüm Kitaplar
    </a>
    @foreach (var authorViewModel in Model.)
    {
        <a class="list-group-item list-group-item @(Model.SelectedCategoryUrl==categoryViewModel.Url ? "active" : "")"
       asp-area=""
       asp-controller="BooksShop"
       asp-action="BookList"
       asp-route-authorurl="@authorViewModel.">
            @authorViewModel
        </a>
    }
</div>